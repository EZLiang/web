    // mklink /J web.server ..\..\github\web.server
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WebServer",
            "program": "${workspaceFolder}/web.server/WebServer.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Make Latex",
            "program": "${workspaceFolder}/web.server/Books-MakeLatexPdf.js",
            "args": ["latex"],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Make Pdf",
            "program": "${workspaceFolder}/web.server/Books-MakeLatexPdf.js",
            "args": ["pdf"],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "PS: PickupImage",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}\\web.server\\PickupImage.ps1",
            "cwd": "${workspaceFolder}"
        }
    ]
}