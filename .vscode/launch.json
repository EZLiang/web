    "version": "0.2.0",
    "configurations": [
        {
            "name": "WebServer",
            "program": "${workspaceFolder}/server/WebServer.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Make Latex",
            "program": "${workspaceFolder}/server/Books-MakeLatexPdf.js",
            "args": ["latex"],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Make Pdf",
            "program": "${workspaceFolder}/server/Books-MakeLatexPdf.js",
            "args": ["pdf"],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}